        { "keys": ["Home"], "desc": "Start of line", "tags": ["move", "line"] },
        { "keys": ["End"], "desc": "End of line", "tags": ["move", "line"] },
        { "keys": ["Ctrl+b", "PageUp"], "desc": "Page up", "tags": ["move", "page"] },
        { "keys": ["Ctrl+f", "PageDown"], "desc": "Page down", "tags": ["move", "page"] },
        { "keys": ["Ctrl+u"], "desc": "Half page up", "tags": ["move", "page"] },
        { "keys": ["Ctrl+d"], "desc": "Half page down", "tags": ["move", "page"] },
        { "keys": ["Ctrl+o"], "desc": "Jump backward on jumplist", "tags": ["move", "jump"] },
        { "keys": ["Ctrl+i"], "desc": "Jump forward on jumplist", "tags": ["move", "jump"] },
        { "keys": ["G"], "desc": "Go to line number (use a count: e.g. 42G)", "tags": ["move", "file"] },
        { "keys": ["g g"], "desc": "Go to start of file (or go to line with count)", "tags": ["move", "file"] },
        { "keys": ["g e"], "desc": "Go to end of file", "tags": ["move", "file"] },
        { "keys": ["g s"], "desc": "Go to first non-whitespace in line", "tags": ["move", "line"] }
      ]
    },
    {
      "title": "Selection (selection-first editing)",
      "items": [
        { "keys": ["v"], "desc": "Enter Select mode (movements extend selection)", "tags": ["select", "mode"] },
        { "keys": ["x"], "desc": "Select current line; repeat to extend down", "tags": ["select", "line"] },
        { "keys": ["X"], "desc": "Extend selection to line bounds (line-wise)", "tags": ["select", "line"] },
        { "keys": ["%"], "desc": "Select entire file", "tags": ["select", "file"] },
        { "keys": [";"], "desc": "Collapse selection to single cursor", "tags": ["select"] },
        { "keys": ["Alt+;"], "desc": "Flip selection cursor/anchor", "tags": ["select"] },
        { "keys": [","], "desc": "Keep only primary selection", "tags": ["select"] },
        { "keys": ["Alt+,"], "desc": "Remove primary selection", "tags": ["select"] },
