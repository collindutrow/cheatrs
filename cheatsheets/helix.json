{
  "id": "helix",
  "name": "Helix",
  "description": "Core movement, selection-first editing, search, registers/clipboard, pickers, and window management.",
  "hint": "Helix is selection-first: select (or extend) a range, then act (delete/change/yank). Command mode is ':' and pickers are in Space mode.",
  "processes": ["hx", "helix", "helix.exe", "WindowsTerminal.exe", "cmd.exe", "consolehost.exe"],
  "sections": [
    {
      "title": "File / Session (command mode)",
      "items": [
        { "keys": [":w", ":write"], "desc": "Write file", "tags": ["file"] },
        { "keys": [":w!", ":write!"], "desc": "Force write (create needed directories)", "tags": ["file", "danger"] },
        { "keys": [":q", ":quit"], "desc": "Close current view", "tags": ["quit"] },
        { "keys": [":q!", ":quit!"], "desc": "Force close view, ignore unsaved changes", "tags": ["quit", "danger"] },
        { "keys": [":wq", ":write-quit", ":x"], "desc": "Write and close current view", "tags": ["file", "quit"] },
        { "keys": [":wq!", ":write-quit!", ":x!"], "desc": "Force write and close view", "tags": ["file", "quit", "danger"] },
        { "keys": [":o {file}", ":open {file}", ":e {file}", ":edit {file}"], "desc": "Open file into current view", "tags": ["file"] },
        { "keys": [":bn", ":buffer-next"], "desc": "Next buffer", "tags": ["buffer"] },
        { "keys": [":bp", ":buffer-previous"], "desc": "Previous buffer", "tags": ["buffer"] },
        { "keys": [":bc", ":buffer-close"], "desc": "Close current buffer", "tags": ["buffer", "quit"] },
        { "keys": [":bc!", ":buffer-close!"], "desc": "Force close buffer, ignore unsaved changes", "tags": ["buffer", "quit", "danger"] },
        { "keys": [":wa", ":write-all"], "desc": "Write all buffers", "tags": ["file", "buffer"] },
        { "keys": [":wqa", ":write-quit-all", ":xa"], "desc": "Write all and close all views", "tags": ["file", "quit"] },
        { "keys": [":qa", ":quit-all"], "desc": "Close all views", "tags": ["quit"] },
        { "keys": [":qa!", ":quit-all!"], "desc": "Force close all views, ignore unsaved changes", "tags": ["quit", "danger"] }
      ]
    },
    {
      "title": "Modes",
      "items": [
        { "keys": ["Esc"], "desc": "Return to Normal mode", "tags": ["mode"] },
        { "keys": ["i"], "desc": "Enter Insert mode (insert before selection)", "tags": ["insert", "mode"] },
        { "keys": ["a"], "desc": "Enter Insert mode (append after selection)", "tags": ["insert", "mode"] },
        { "keys": ["I"], "desc": "Insert at start of line", "tags": ["insert"] },
        { "keys": ["A"], "desc": "Insert at end of line", "tags": ["insert"] },
        { "keys": ["o"], "desc": "Open new line below selection and insert", "tags": ["insert"] },
        { "keys": ["O"], "desc": "Open new line above selection and insert", "tags": ["insert"] },
        { "keys": ["v"], "desc": "Enter Select (extend) mode", "tags": ["select", "mode"] },
        { "keys": [":"], "desc": "Enter command mode", "tags": ["command", "mode"] },
        { "keys": ["Space"], "desc": "Enter Space mode (pickers/clipboard/palette)", "tags": ["mode", "picker"] },
        { "keys": ["Ctrl-w"], "desc": "Enter Window mode (splits/navigation)", "tags": ["mode", "window"] },
        { "keys": ["g"], "desc": "Enter Goto mode", "tags": ["mode", "goto"] },
        { "keys": ["m"], "desc": "Enter Match mode (brackets/surround/textobjects)", "tags": ["mode", "match"] },
        { "keys": ["z"], "desc": "Enter View mode (scroll/align view)", "tags": ["mode", "view"] },
        { "keys": ["Z"], "desc": "Enter sticky View mode (Esc to exit)", "tags": ["mode", "view"] }
      ]
    },
    {
      "title": "Basic movement (Normal mode)",
      "items": [
        { "keys": ["h", "j", "k", "l"], "desc": "Left, down, up, right", "tags": ["move"] },
        { "keys": ["w"], "desc": "Next word start", "tags": ["move", "word"] },
        { "keys": ["b"], "desc": "Previous word start", "tags": ["move", "word"] },
        { "keys": ["e"], "desc": "Next word end", "tags": ["move", "word"] },
        { "keys": ["W"], "desc": "Next WORD start", "tags": ["move", "word"] },
