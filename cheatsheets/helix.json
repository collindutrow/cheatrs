        { "keys": ["d"], "desc": "Delete selection", "tags": ["delete"] },
        { "keys": ["Alt+d"], "desc": "Delete selection without yanking", "tags": ["delete", "yank", "black hole"] },
        { "keys": ["c"], "desc": "Change selection (delete then insert)", "tags": ["change"] },
