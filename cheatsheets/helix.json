        { "keys": ["Space+p"], "desc": "Paste system clipboard after selections", "tags": ["paste", "clipboard"] },
        { "keys": ["Space+P"], "desc": "Paste system clipboard before selections", "tags": ["paste", "clipboard"] },
        { "keys": ["Space+R"], "desc": "Replace selections with clipboard contents", "tags": ["paste", "clipboard", "change"] }
      ]
    },
    {
      "title": "Search",
      "items": [
