        { "keys": [">"], "desc": "Indent selection", "tags": ["indent"] },
        { "keys": ["<"], "desc": "Unindent selection", "tags": ["indent"] },
        { "keys": ["="], "desc": "Format selection (LSP)", "tags": ["format"] },
        { "keys": ["J"], "desc": "Join lines inside selection", "tags": ["edit", "line"] },
        { "keys": ["u"], "desc": "Undo", "tags": ["undo"] },
        { "keys": ["U"], "desc": "Redo", "tags": ["redo"] },
        { "keys": ["Alt+u"], "desc": "Earlier in history", "tags": ["undo", "history"] },
        { "keys": ["Alt+U"], "desc": "Later in history", "tags": ["redo", "history"] },
        { "keys": ["Q"], "desc": "Start/stop macro recording to selected register (experimental)", "tags": ["macro"] },
        { "keys": ["q"], "desc": "Replay macro from selected register (experimental)", "tags": ["macro"] }
      ]
    },
    {
      "title": "Yank / paste / registers",
      "items": [
        { "keys": ["y"], "desc": "Yank selection", "tags": ["yank"] },
